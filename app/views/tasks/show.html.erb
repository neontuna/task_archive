<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= @task.tasktitle %> 
      <span class="label label-default pull-right"><%= @task.tnumber %></span>
    </h3>
  </div>

  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt>Customer</dt>
      <dd><%= link_to @task.customer.custname, tasks_customer_path(@task.customer.id) %>
      </dd>
    
      <% if @task.contact %>
        <dt>Contact</dt>
        <dd>
          <%= link_to contact_path(@task.contact.id) do %>
            <%= @task.contact.firstname.titleize %> 
            <%= @task.contact.lastname.titleize %>
          <% end %>
        </dd>
      <% end %>

      <% unless @task.description.blank? %>
        <dt>Description</dt>
        <dd>
          <%= simple_format(@task.description) %>
        </dd>
      <% end %>

    </dl>
  </div>
</div>

<%= render partial: "workrecord", collection: @workrecords %>