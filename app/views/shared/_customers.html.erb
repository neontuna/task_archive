<table class="table table-hover">
  <thead>
    <tr>
      <th>Customer Name</th>
      <th>City</th>
      <th>State</th>
    </tr>
  </thead>
  <tbody>

    <% @customers.each do |c| %>
      <tr>
        <td>
          <%= link_to c.custname, tasks_customer_path(c.id) %> 
        </td>
        <td>
          <%= c.city %> 
        </td>
        <td>
          <%= c.region %> 
        </td> 
      </tr>
    <% end %>

  </tbody>
</table>