<table class="table table-hover">
  <thead>
    <tr>
      <th>Autotask Ticket</th>
      <th>Title</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>

    <% @tasks.each do |t| %>
      <tr>
        <td>
          <%= link_to t.tnumber, task_path(t.id) %> 
        </td>
        <td>
          <%= t.tasktitle %> 
        </td>
        <td>
          <%= t.entrydate.strftime("%m/%d/%Y") %> 
        </td> 
      </tr>
    <% end %>

  </tbody>
</table>